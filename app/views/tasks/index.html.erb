<h1>Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li class="list-unstyled">
      <% if task.completed %>
        <i class="far fa-check-square"></i>
      <% else %>
        <i class="far fa-square"></i>
      <% end %>
      <%= link_to task.title, task_path(task) %>
    </li>
  <% end %>
</ul>

<%= link_to new_path do %>
  <i class='fas fa-plus'></i> Add a new task
<% end %>





