<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-xs-6">
        <h1><%= @task.title %></h1>
      </div>
      <div class="col-xs-3">
        <div class="btn btn-success">
          <%= link_to edit_path do %>
            <i class="fas fa-pencil-alt"></i> Edit this task
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="details">
    <p><%= @task.details %></p>
  </div>

  <p>
    <% if @task.completed %>
      <i class="far fa-check-square"></i> This task is completed
    <% else %>
      <i class="far fa-square"></i> This task is not completed yet
    <% end %>
  </p>

  <hr>
  <%= link_to tasks_path do %>
    <i class="fas fa-undo-alt"></i> Back to list
  <% end %>
</div>
