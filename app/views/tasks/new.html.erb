
<div class="container">
  <div class="row">
    <div class="col-xs-6">
      <h1>New Task</h1>
      <%= form_for(@task) do |f| %>
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :details %>
          <%= f.text_field :details, class: 'form-control' %>
        </div>

        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>

<hr>
<%= link_to tasks_path do %>
  <i class="fas fa-undo-alt"></i> Back to list
<% end %>
